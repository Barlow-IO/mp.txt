*
  margin 0
  padding 0
  font-family menlo courier new, monospace

body
  font-family menlo, monospace

.info-span
  display block
  position absolute
  top -100px
  left -100px
  font-size 26px
  line-height 1em

/*
 *CONTAINERS
 */
.wrapper
  padding 20px
  position absolute
  width calc(100% - 40px)
  height calc(100% - 40px)

.container
  display -webkit-flex
  display flex
  flex-direction row

.left-container
  -webkit-flex 3
  flex 3
  display -webkit-flex
  display flex
  flex-direction column

.right-container
  -webkit-flex 1
  flex 1

.view-container
  width 100%
  -webkit-flex 2
  flex 2

.chat-container
  width 100%
  -webkit-flex 1
  flex 1
  display -webkit-flex
  display flex
  flex-direction column
  justify-content flex-end

/*
 *VIEW
 */

/*
 *CHAT
 */
#chat-form
  background #b0b0b0
  padding 3px
  bottom 0
  width 100%
  -webkit-flex 1
  flex 1
  font-size 20px
  display flex
  align-content center

#chat-input
  border 0
  padding 10px
  width 85%
  margin-right .5%

#chat-button
  width 7%
  background #ce1818
  padding 10px
  border none

#chat-messages
  list-style-type none
  margin 0
  padding 0
  overflow scroll
  -webkit-flex 3
  flex 3
  li
    padding 5px 10px
    &:nth-child(odd)
      background #eee

/*
 *STATUS
 */
.status-text::before
  content '['

.status-text::after
  content ']'
//IDEA: we can do health bars entirely in css by
//      manipulating min and max health value attributes

.status-health
  color #de472f

.status-energy
  color #9bf6f9

.status-protection
  color #bdbdbd

.status-food
  color #82691e
