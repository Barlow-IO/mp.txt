*
  margin 0
  padding 0
  font-family menlo courier new, monospace

body
  font-family menlo, monospace

.info-span
  display block
  position absolute
  top -100px
  left -100px
  font-size 26px
  line-height 1em



/*
 *CONTAINERS
 */
.wrapper
  padding 20px

.left-container
  float left
  width 75%
  display table

.view-container
  display table-row
  height auto
  border solid black 3px

.chat-container
  display table-row
  min-height 300px
  border solid black 3px

.right-container
  float right
  width 25%

/*
 *VIEW
 */

/*
 *CHAT
 */
#chat-form
  background #b0b0b0
  padding 3px
  bottom 0
  width 100%

#chat-input
  border 0
  padding 10px
  width 90%
  margin-right .5%

#chat-button
  width 7%
  background #1f4dbc//rgb(130, 224, 255)
  border none
  padding 10px

#chat-messages
  list-style-type none
  margin 0
  padding 0
  li
    padding 5px 10px
    &:nth-child(odd)
      background #eee

/*
 *STATUS
 */
.status-text::before
  content '['

.status-text::after
  content ']'
//IDEA: we can do health bars entirely in css by
//      manipulating min and max health value attributes

.status-health
  color #de472f

.status-energy
  color #9bf6f9

.status-protection
  color #bdbdbd

.status-food
  color #82691e
